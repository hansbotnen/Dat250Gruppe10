<!DOCTYPE html>
<html lang="en">

<% include ../partials/head %>

<body>
    <% include ../partials/nav %>
    
    <% art.forEach(function(art) { %>
    <div class="card">
        <a href="artworks/<%= art.id%>">
            <img src="<%= art.photo %>" style="width:100%; height:50%">
            <div class="container">
            
                <h3><%= art.name %></h3>
                <p>Artist: <%= art.artist %></p>
                <p>Current Bid:<%= art.bid.bidAmount %></p>
            </div>
        </a>
    </div>
    <% }); %>
</body>

</html>